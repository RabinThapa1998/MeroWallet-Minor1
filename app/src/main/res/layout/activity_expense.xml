<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseActivity"
    android:background="@drawable/gradient">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient2"
        android:id="@+id/action_bar"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/logo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:id="@+id/exp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Amount:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:inputType="number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/gradient"

            android:id="@+id/tvDate"
            android:textSize="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="20dp"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/gradient" >
            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account:"
            android:textSize="20dp"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/gradient" >

            <Spinner
                android:id="@+id/spinner_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <Button
            android:id="@+id/btnTakePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload reciept"
            android:onClick="openGallery"/>
        <Button
            android:id="@+id/btnTakePicCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="take photo"
            android:onClick="openCamera"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Enter"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/blue_semi_transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="validateExpense"/>

        <ImageView
            android:id="@+id/capturedImage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/btnTakePicture"
            android:layout_alignEnd="@+id/exp"
            android:layout_alignBottom="@+id/exp"
            android:layout_marginLeft="45sp"
            android:scaleType="fitXY" />
    </LinearLayout>


</RelativeLayout>